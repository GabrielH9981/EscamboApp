<h1 class="page-header">Administradores</h1>

    <% if @admin.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
        <ul>
            <% @admin.errors.full_messages.each do |message| %>
                <li> <%= message %> </li>
        </ul>
            <% end %>
    </div>
    <% end %>


    <div class="panel panel-default">
        <div class="panel-heading">
            <%= action %>
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body">

            <div class="col-lg-6">
                <%= form_for([:backoffice, @admin]) do |f| %>

                    <div class="form-group">
                        <label>Nome:</label>
                        <%= f.text_field :name, class:"form-control", placeholder:"Digite seu nome" %>
                    </div>

                    <div class="form-group">
                        <label>Email:</label>
                        <%= f.text_field :email, class:"form-control", placeholder:"Ex: teste@teste.com" %>
                    </div>

                    <% if policy(@admin).edit? %>
                        <div class="form-group">
                            <label>Tipo de Acesso:</label>
                            <%= f.collection_radio_buttons(:role, options_for_roles, :id, :description) do |b|%>
                                <div class="radio">
                                    <%= b.label {b.radio_button + b.text} %>
                                </div>
                            <% end %>
                        </div>
                    <% end %>

                    <div class="form-group">
                        <label>Senha:</label>
                        <%= f.text_field :password, class:"form-control", placeholder:"Digite sua senha" , type:"password"%>
                    </div>

                    <div class="form-group">
                        <label>Confirmação de Senha:</label>
                        <%= f.text_field :password_confirmation, class:"form-control", placeholder:"Confirme sua senha", type:"password" %>
                    </div>
                    <button type="submit" class="btn btn-default">Salvar</button>
                <% end %>
            </div>
        </div>
        <!-- /.panel-body -->
    </div>

